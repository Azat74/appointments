<%= form_for appointment, url: { action: 'create' } do |f| %>

  <% if appointment.errors.any? %>
    <ul>
      <% appointment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :date %>:
  <%= f.date_select :date %>
  <%=
    collection_select(
      :appointment,
      :appointment_time_id,
      AppointmentTime.all,
      :id,
      :time, # TODO create a method in model, add unit tests for it.
    )
  %>


  <%= submit_tag 'Create' %>
<% end %>
