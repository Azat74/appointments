<!DOCTYPE html>
<html>
  <head>
    <title>Appointments</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <% if customer_signed_in? %>
      <p><%= link_to 'Logout',  destroy_customer_session_path, method: :delete %></p>
    <% else %>
      <p><%= link_to 'Log in', new_customer_session_path %></p>
      <p><%= link_to 'Sign up', new_customer_registration_path %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
